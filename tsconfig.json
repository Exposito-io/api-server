{
    "compilerOptions": {
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "rootDir": "./",
        "outDir": "./build/",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "inlineSources": true,
        "allowJs": true,
        "baseUrl": ".",
        "lib": ["es2017"],
        "paths": {
            "*": ["*", "contracts/*"]
        },
        "typeRoots": [
            "types"
        ],
        "types": ["node", "chai", "mocha"]
    },
    "include": [
        "bin/www.ts",
        "test"
    ],
    "exclude": [
        "node_modules"
    ]
}
